@model IQueryable<Category>
<div class="col-md-4">
    <div class="card my-4">
        <h5 class="card-header">Kategoriler</h5>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-7">
                    <ul class="list-unstyled mb-0">
                        @foreach (var item in Model)
                        {
                            if (item.Posts.Count > 0)
                            {
                                <li>
                                    <a asp-controller="Makale" asp-action="Index" asp-route-category="@item.Title" class="nav-link">
                                        @item.Title
                                    (@item.Posts.Where(x=>x.IsActive==true).Count())
                                </a>
                            </li>
                        }

                    }

                    </ul>
                </div>

            </div>
        </div>
    </div>
</div>
