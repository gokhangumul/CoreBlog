@model IQueryable<Setting>
@{
    ViewData["Title"] = "AllSettings";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}

<div class="row">
    <div class="col-md-2 mb-2">
        <a asp-controller="Settings" asp-action="CreateSettings" class="btn btn-block btn-info btn-sm">Yeni Ayar</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Tüm Ayarlar</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Ayar Adı</th>
                            <th>Ayarlar</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SettingName</td>
                                <td>
                                    <a asp-controller="Settings" asp-action="UpdateSettings" asp-route-uniqkey="@item.UniqKey" class="btn btn-warning btn-sm">Düzenle</a>
                                </td>
                            </tr>

                        }

                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
</div>

