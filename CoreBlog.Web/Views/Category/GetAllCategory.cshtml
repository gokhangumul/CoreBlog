@model IQueryable<Category>
@{
    ViewData["Title"] = "GetAllCategory";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}
<div class="row">
    <div class="col-md-2 mb-2">
        <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-block btn-info btn-sm">Yeni Kategori</a>
    </div>
</div>

<div class="row">
    <div class="col-xs-6 col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Tüm Kategoriler</h3>
            </div>
            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>Güncelleme Tarihi</th>
                            <th>Aktiflik Durumu</th>
                            <th>Ayarlar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.CreatedTime.ToString("dd MMMM yyyy HH:mm")</td>
                                <td>@(item.UpdatedTime.HasValue ? item.UpdatedTime.Value.ToString("dd MMMM yyyy HH:mm") : "-")</td>
                                <td>@(item.IsActive ? "Aktif" : "Pasif")</td>
                                <td>
                                    <a asp-controller="Category" asp-action="UpdateCategory" asp-route-uniqkey="@item.UniqKey" class="btn btn-block btn-warning btn-xs">Düzenle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

