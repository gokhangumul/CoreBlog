@model IQueryable<Post>
@{
    ViewData["Title"] = "GetAllPost";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}
<div class="row">
    <div class="col-md-2 mb-2">
        <a asp-controller="Post" asp-action="CreatePost" class="btn btn-block btn-info btn-sm">Yeni Post</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Tüm Postlar</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Post Başlık</th>
                            <!-- <th>Post Özet</th>-->
                            <th>Post Kategori</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>Güncellenme Tarihi</th>
                            <th>Post Yazar</th>
                            <th>Okunma Sayısı</th>
                            <th>Aktiflik Durumu</th>
                            <th>Ayarlar</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.Title</td>
                            <!--<td>@(Html.Raw(item.PostContent))</td>-->
                            <td>@item.Category.Title</td>
                            <td>@item.CreatedDate.ToString("dd MMMM yyyy HH:mm")</td>
                            <td>@(item.UpdatedDate.HasValue ? item.UpdatedDate.Value.ToString("dd MMMM yyyy HH:mm") : "-")</td>
                            <td>@item.AuthorName</td>
                            <td>@item.Hit</td>
                            <td>@(item.IsActive ? "Aktif" : "Pasif")</td>
                            <td>
                                <a asp-controller="Post" asp-action="UpdatePost" asp-route-uniqkey="@item.UniqKey" class="btn btn-block btn-warning btn-xs">Düzenle</a>
                            </td>
                        </tr>

                        }

                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
</div>


